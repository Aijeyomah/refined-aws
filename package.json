{
  "name": "refined-aws",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "xo && stylelint extension/*.css",
    "test": "npm run lint && ava",
    "build": "webpack --mode=production",
    "build:watch": "webpack --mode=development --watch",
    "semver": "VERSION=$npm_package_version; echo $VERSION; dot-json extension/manifest.json version $VERSION --indent 2",
    "pre:deploy": "cd extension && webstore upload --source=build --auto-publish",
    "deploy": "npm-run-all semver build pre:deploy --sequential --print-name"
  },
  "dependencies": {
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "ava": "^1.0.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^4.6.0",
    "dot-json": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.9.0",
    "stylelint-config-xo": "^0.12.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "xo": "^0.23.0"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "jquery",
      "es6"
    ],
    "parser": "babel-eslint",
    "globals": [
      "browser"
    ],
    "ignores": [
      "extension/build/**"
    ]
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "failFast": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "block-no-empty": true,
      "color-no-invalid-hex": true,
      "property-no-unknown": true,
      "comment-no-empty": true,
      "no-extra-semicolons": true
    }
  },
  "engines": {
    "node": "8.11.3",
    "npm": "5.6.0"
  }
}
